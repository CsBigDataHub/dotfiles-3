DEFINE PLACEHOLDER SNIPPET
    /LANGUAGE="TEMPLATE"
    /TYPE=NONTERMINAL
    "DEFINE PLACEHOLDER {place_name}"
    "@@@@/LANGUAGE="{language_name}""
    "@@@@/TYPE={TYPE_TYPE}"
    "@@@@{line_of_text}..."
    "END DEFINE"
END DEFINE

DEFINE PLACEHOLDER ALIAS
    /LANGUAGE="TEMPLATE"
    /NOAUTO_SUBSTITUTE
    /TYPE=NONTERMINAL
    "DEFINE PLACEHOLDER {place_name}"
    "@@@@/LANGUAGE="{language_name}""
    "@@@@/PLACEHOLDER={user_valid_identifier}"
    "END DEFINE"
END DEFINE
